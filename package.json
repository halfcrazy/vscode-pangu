{
  "name": "pangu",
  "displayName": "pangu",
  "description": "add whitespace",
  "version": "0.1.2",
  "publisher": "halfcrazy",
  "repository": {
    "type": "git",
    "url": "https://github.com/halfcrazy/vscode-pangu"
  },
  "engines": {
    "vscode": "^1.27.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.add_space",
        "title": "Pangu: Add whitespace for selection"
      },
      {
        "command": "extension.add_space_all",
        "title": "Pangu: Add whitespace for all"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Pangu Configuration",
      "properties": {
        "pangu.auto_space_on_save": {
          "type": "boolean",
          "default": false,
          "description": "Auto add whitespace for your inputs"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^8.0.16",
    "mocha": "^3.4.2",
    "typescript": "^2.0.3",
    "vscode": "^1.0.0",
    "tslint": "^5.8.0"
  },
  "dependencies": {
    "pangu": "^3.3.0"
  }
}
